<% content_for (:html_title) {@book.title} %>

<h1><%= @book.title %></h1>
<h3>rating: <%= @book.rating %></h3>
<h3>number of reviews: <%= @book.reviews %></h3>
<h3>price: <%= @book.price %></h3>

<li>author: <%=link_to @book.author.name, @book.author %></li>
<h3>genre: <%= link_to @book.genre.name, @book.genre %></h3>
<h3>
  years:
    <% @book.years.each do |year| %>
      <%= link_to year.year, year %>
    <% end %>
</h3>



